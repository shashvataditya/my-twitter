<div class="row">
	<div class="col-xs-3">
		<div class="panel panel-default">
			<div class="panel-body">
				<div>
					<%= @username %>
				</div>
				<div>
					<p>About : </p>
					<% if @profileExists %>
						<p><%= @profile.about %></p>
					<% end %>
				</div>
				<div>
					<p>School Name : </p>
					<% if @profileExists %>
						<p><%= @profile.schoolname %></p>
					<% end %>
				</div>
				<% if current_user.username == params[:id] %>
					<div>
						<%= link_to('Edit Profile', '/edit/profile') %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-xs-6">
		<% for @t in @userTweets %>
			<div class="panel panel-default">
				<div class="panel-body">
					<p><%= @t.content %></p>
				</div>
			</div>
		<% end %>
	</div>
	<div class="col-xs-3">
		<%= render '/components/follow_button'%>
		Followers:-
		<div class="panel panel-default">
			<% for @f in @profileUser.followers %>
				<div class="panel-body">
					<%= @f.username %>
				</div>
			<% end %>
		</div>
		Followees:-
		<div class="panel panel-default">
			<% for @f in @profileUser.following %>
				<div class="panel-body">
					<%= @f.username %>
				</div>
			<% end %>
		</div>
	</div>
</div>
